                <!-- 更多花茶品种 -->
            </ul>
        </div>
        <!-- 其他 -->
        <div class="tea-box">
            <h3>其他</h3>
            <ul class="tea-list">
                <li>苦丁茶</li>
                <li>绞股蓝茶</li>
                <li>石斛茶</li>
                <!-- 更多其他茶类 -->
            </ul>
        </div>
        <!-- 根据需要继续添加其他茶类 -->
    </div>
    <div id="footer">
        <p>版权所有 &copy; 2024 中国茶文化网</p>
    </div>
</body>
</html>